#!/bin/sh
set -ex
cd "$(dirname "$0")/../"

# Check environment

fail() {
    echo 1>&2 "$1"
    echo 1>&2 "Usage: $(basename "$0") [DEVICE]"
    exit 1
}

if [ "$#" -lt 1 ] ; then
    fail "Invalid number of arguments"
fi

if [ "$(id --user)" -ne 0 ] ; then
    fail "Impossible to prepare the stick without root privileges."
fi

if udevadm info --query all --name "$1" | grep ID_BUS | grep --invert-match --quiet usb ; then
    fail "\"$1\" is not an USB device."
fi

export BOOT_FILE="${BOOT_FILE:-images/boot.img}"
if [ ! -f "${BOOT_FILE}" ] ; then
    fail "Image \"${BOOT_FILE}\" can not be found."
fi

export NETINST_FILE=${NETINST_FILE:-images/netinst.iso}
if [ ! -f "${NETINST_FILE}" ] ; then
    fail "Image \"${NETINST_FILE}\" can not be found."
fi

# Install boot.img on stick

dd if="${BOOT_FILE}" of="$1"

# Copy netinst.iso on stick

mount "$1" /mnt
cp "${NETINST_FILE}" /mnt/netinst.iso
sync
umount /mnt
