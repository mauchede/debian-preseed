#!/bin/sh
set -ex
cd "$(dirname "$0")/../images"

# Remove old images

rm --force boot.img* netinst.iso

# Retrieve boot.img

curl --location --output boot.img.gz "http://ftp.fr.debian.org/debian/dists/jessie/main/installer-amd64/current/images/hd-media/boot.img.gz"
gunzip --quiet boot.img.gz

# Retrieve netinst.iso

export $(curl "https://raw.githubusercontent.com/timonier/version-lister/release/generated/debian/latest" | xargs)
curl --location --output netinst.iso "http://cdimage.debian.org/debian-cd/${DEBIAN_VERSION}/amd64/iso-cd/debian-${DEBIAN_VERSION}-amd64-netinst.iso"
